name: epfl:cheep:iref_analog:0.1.0
description: HEEPidermis iREF analog model

filesets:
  rtl:
    depend:
    - epfl:cheep:iref_packages
    file_type: systemVerilogSource

  rtl_behavior:
    files:
    - Verilog/iREF.sv
    file_type: systemVerilogSource

  rtl_ams:
    files:
    - spice/iREF.sv 
    file_type: systemVerilogSource

  verilator-waivers:
    files:
    - misc/iREF-waivers.vlt
    file_type: vlt

targets:
  default: &default
    filesets:
    - rtl
    - target_sim? (rtl_behavior)
    - tool_verilator ? (verilator-waivers)
    - rtl-iref-ams-sim ? (rtl_ams)
