name: epfl:cheep:amux_analog:0.1.0
description: HEEPidermis aMUX analog model

filesets:
  rtl:
    depend:
    - epfl:cheep:amux_packages
    file_type: systemVerilogSource

  rtl_behavior:
    files:
    - Verilog/aMUX.sv
    file_type: systemVerilogSource

  rtl_ams:
    files:
    - spice/aMUX.sv 
    file_type: systemVerilogSource

  verilator-waivers:
    files:
    - misc/aMUX-waivers.vlt
    file_type: vlt

targets:
  default: &default
    filesets:
    - rtl
    - target_sim? (rtl_behavior)
    - tool_verilator ? (verilator-waivers)
    - rtl-amux-ams-sim ? (rtl_ams)
