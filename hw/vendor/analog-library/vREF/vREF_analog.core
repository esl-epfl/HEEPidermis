name: epfl:cheep:vref_analog:0.1.0
description: HEEPidermis vREF analog model

filesets:
  rtl:
    depend:
    - epfl:cheep:vref_packages
    file_type: systemVerilogSource

  rtl_behavior:
    files:
    - Verilog/vREF.sv
    file_type: systemVerilogSource

  rtl_ams:
    files:
    - spice/vREF.sv 
    file_type: systemVerilogSource

  verilator-waivers:
    files:
    - misc/vREF-waivers.vlt
    file_type: vlt

targets:
  default: &default
    filesets:
    - rtl
    - target_sim? (rtl_behavior)
    - tool_verilator ? (verilator-waivers)
    - rtl-vref-ams-sim ? (rtl_ams)
