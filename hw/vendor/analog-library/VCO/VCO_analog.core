name: epfl:cheep:vco_analog:0.1.0
description: HEEPidermis VCO analog model

filesets:
  rtl:
    depend:
    - epfl:cheep:vco_packages
    file_type: systemVerilogSource

  rtl-behavioral:
    files:
    - Verilog/VCO.sv
    - Verilog/phase_lut.hex: { file_type: user, copyto: phase_lut.hex }  # Simply copy the file to the build folder
    file_type: systemVerilogSource

  rtl_ams:
    files:
    - spice/VCO_subsystem.sv
    file_type: systemVerilogSource

  verilator-waivers:
    files:
    - misc/VCO-waivers.vlt
    file_type: vlt

targets:
  default: &default
    filesets:
    - rtl
    - tool_verilator ? (verilator-waivers)
    - use_vco_spice? (rtl_ams)
    - "!use_vco_spice? (target_sim? (rtl-behavioral))"

